# ========================
# NEXT.JS FRONTEND CONFIG
# ========================

# Base URL of your Laravel API (no trailing slash)
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000

# Frontend app URL (for CORS/auth callbacks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ========================
# AUTHENTICATION (Sanctum)
# ========================

# CSRF cookie name (matches Laravel's config/sanctum.php)
NEXT_PUBLIC_SANCTUM_CSRF_COOKIE=XSRF-TOKEN

# Session cookie name (matches config/session.php)
NEXT_PUBLIC_SESSION_COOKIE=laravel_session

# ========================
# DEBUGGING
# ========================
DEBUG=false